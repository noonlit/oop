        <ComboBox fx:id="category" />
        <ListView fx:id="questionsList" />
        <Button fx:id="submit" text="Submit" />
        <Text fx:id="message" />
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>
    </VBox>
</VBox>
