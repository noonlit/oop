<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane alignment="BASELINE_CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FinalProject.Controller.LoginController">
      <VBox fx:id="form" alignment="center" minHeight="300.0" minWidth="300.0" spacing="15">
          <Label text="Welcome!">
              <font>
                  <Font size="20" />
              </font>
             <VBox.margin>
                <Insets bottom="20.0" />
             </VBox.margin>
          </Label>
          <Label text="Please enter your credentials below." />
          <TextField fx:id="email" promptText="Email" />
          <PasswordField fx:id="password" promptText="Password" />
          <Button onAction="#handleLogin" text="Submit">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
          <Text fx:id="message" />
          <padding>
              <Insets bottom="40" left="40" right="40" top="40" />
          </padding>
      </VBox>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
